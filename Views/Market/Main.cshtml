@{ 
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "Market";
}

@model eUseControl.Web.Models.UserData

<!DOCTYPE html>
<html lang="en">
<head>
     <title>Market</title>
     <meta charset="utf-8">
     <meta name="viewport" content="width=device-width, initial-scale=1">
     <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
     <link rel="stylesheet" href="~/Content/css/style.css">
</head>
<body>
     <div class="wrapper">
          <div id="header">
               <div class="logo">BOOKShop</div>
               <div class="menubar"><a href="/Home/Index">Home</a></div>
               <div class="menubar"><a href="/Market/Main">Market</a></div>
               <div class="buttonm" id="button"></div>
               <div class="menubar"><a href="/Auth/Login">Login</a></div>
          </div>

          <div class="menuright">
               <ul>
                    @foreach (var ctg in Model.Category)
                    {
                         <li><a href="#@ctg" id="menupage">@ctg</a></li>
                    }
                    </ul>
          </div>

          <div class="market">
               @foreach (var ctg in Model.Category)
               {
                    <div class="row books" id="@ctg">
                              <h2>@ctg</h2>
                              @for (int i = 0; i < 7; i++)
                              {
                                   <div class="col-3 book">
                                        <img src="~/Content/img/noimage.jpg">
                                        <h3>@Model.Books[i]</h3>
                                        <p>Stock: </p>
                                   </div>
                              }
                         
                    </div>
               }
          </div>


     </div>

     <script src="~/Scripts/jquery-3.5.1.min.js"></script>
     <script src="~/Content/js/app1.js"></script>
     <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
